<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppRpgEtec.Views.Usuarios.LoginView">
    <ContentPage.Content>



        <StackLayout>
            <TableView Intent="Form" HasUnevenRows="True">
                <TableRoot>
                    <TableSection Title="Dados do Usuário">
                        <ViewCell>
                            <Entry Placeholder="Digite o login" Text="{Binding Login}" VerticalOptions="FillAndExpand"
HorizontalOptions="FillAndExpand" ></Entry>
                        </ViewCell>
                        <ViewCell>
                            <Entry Placeholder="Digite a senha" Text="{Binding Senha}" IsPassword="True" VerticalOptions="FillAndExpand"
HorizontalOptions="FillAndExpand" >
                            </Entry>
                        </ViewCell>
                        <ViewCell>
                            <Button Text="Entrar" Command="{Binding EntrarCommand}"  />
                        </ViewCell>
                    </TableSection>
                </TableRoot>
            </TableView>



        </StackLayout>



    </ContentPage.Content>
</ContentPage>